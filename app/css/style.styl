@import "icon/*"
@import 'axis'
@import 'jeet'
@import 'rupture'
@import "variable/*"

border-box-html()
fluid-media() //care flex box image
rupture.scale = 0 320px 640px 768px 1024px 1280px
rupture.scale-names = 'xs' 's' 'm' 'l' 'xl' 
jeet.gutter = 1

.allpage
	background #eee
	wraper
		background white
		height 100vh
		a
			padding 20px
			display block
			box-shadow 1px 1px 20px #eee
			margin-bottom 10px
			border-radius 5px
			tr(all)
			&:hover
				background #6D2D74
				color white
.main-cont
	width 1070px
	margin 0 auto
a
	display block
input 
	outline: 0 !important
	
body
	font-family Nautilus Pompilius 

.header
	padding 30px 0
	flex(between)
	height 110px
.header-search
	input
		size 230px 46px
		border 2px solid #00a651
		border-radius 10px
		padding 10px 15px
.header-list
	flex(mid)
.header-list-text
	color green
	font-size 35px
	font-weight 400
	line-height 50px
	margin-right 20px
.header-list-val
	width 72px
	height 72px
	background-color white
	border 5px solid green
	border-radius 50%
	font-size 39px
	font-weight 400
	line-height 65px
	color green
	text-align center
.header-enter
	font-size 35px
	font-weight 400
	line-height 50px
	color green
.baner
	bgi('main-baner.jpg')
	width 100%
	height 590px
	background-size cover
	background-position bottom center

.baner-contact-wrap
	f()
	justify-content flex-end
	width 100%
.baner-contact
	width 300px
	margin-top 50px
.baner-contact-el
	text-shadow 2.5px 4.3px 4.5px rgba(0, 0, 0, 0.64)
	color white
	font-size 39px
	font-weight 400
	line-height 50px
	text-align center

.baner-title
	text-shadow 1.5px 2.6px 12.7px rgba(0, 0, 0, 0.69)
	color white
	font-size 130px
	font-style italic
	line-height 60px
	margin-top 90px
	text-align center
.baner-sub-title
	text-shadow 4px 6.9px 12.7px rgba(0, 0, 0, 0.81)
	color white
	font-family Appetite
	font-size 47px
	font-style italic
	line-height 52px
	width 500px
	text-align center
	margin 0 auto
	margin-top 20px
	
.baner-bottom
	margin-top 55px
	flex(mid)
.baner-bottom-text
	text-shadow 2.5px 4.3px 17.5px rgba(0, 0, 0, 0.64)
	color #f5dc05
	font-size 34px
	font-weight 400
	line-height 54px
	
.baner-bottom-link
	background-color #fccf00
	border-radius 10px
	box-shadow 2.5px 4.3px 57.2px 1.8px rgba(0, 0, 0, 0.64)
	display inline-block
	width 231px 
	color #020202
	font-size 27px
	font-weight 400
	padding 2px
	text-align center
	margin-left 20px
	
.main-menu
	background green
.main-menu-wraper
	flex(between)
.main-menu-el
	coloe white
	color white
	font-size 30px
	font-weight 400
	line-height 60px
	&:hover
		color yellow
.main-menu-el__active
	color yellow
	
.slider.owl-carousel
	width 100%
	margin-top 5px
	position relative
.slider-el
	padding 25px 35px
	height 515px
.slider-title
	color #ef0c05
	font-size 145px
	font-weight 400
	text-shadow white 1px 0px, white 1px 1px, white 0px 1px, white -1px 1px, white -1px 0px, white -1px -1px, white 0px -1px, white 1px -1px;
.slider-text
	color #fdfcfc
	font-size 57px
	font-weight 400
	line-height 60px
	margin-top 180px
	text-align center

.owl-dots
	position absolute
	bottom 10px
	flex(mid)
	width 100%
.owl-dot
	width 20px
	height 20px
	border-radius 50%
	background-color #dedede
	margin 0 12px	

.owl-dot.active
	background-color #9b9b9b
	
.title
	color #00a651
	font-size 55px
	font-weight 400
	line-height 60px
	padding 35px
	text-align center

.product-wrap
	flex(between)
	fw()
.product-el
	margin-bottom 10px
	position relative
.product-el-img
	width 100%
	display block
	margin-bottom 10px
.product-el-title
	color #555
	font-family Myriad Pro Regular
	font-size 16px
	font-weight 400
.product-info
	flex(between)
	margin-top 5px
.product-info-star
	.fa-star
		color #f0de12
.product-info-star-none
	color #dedede!important
.product-info-price
	color #555
	font-family Myriad Pro Regular
	font-size 16px
	font-weight 400
.product-el-sale
	position absolute
	top 135px
	right 10px
	color #fc203a
	font-size 57px
	font-weight 400
	line-height 60px
	text-shadow white 1px 0px, white 1px 1px, white 0px 1px, white -1px 1px, white -1px 0px, white -1px -1px, white 0px -1px, white 1px -1px;
.title-red
	color red
	
.footer
	padding 30px 0
	background green
	color white
	margin-top 80px
//.main-cont
.footer-wrap
	flex(between)
//.footer-link
.footer-link-el
	font-size 22px
	font-weight 400
	color white
	display block
	margin-bottom 5px
.footer-logo
	flex(mid)
	fl()
.footer-logo-text
	//font-family Appetite
	font-size 61px
	font-style italic
	line-height 54px
.footer-logo-soc
	flex(mid)
	margin-top 30px
	.fa
		margin 0 5px
		color yellow
		border-radius 50%
		border 1px solid yellow
		width 35px
		height 35px
		text-align center
		font-size 22px
		line-height 34px
//.footer-info
.footer-info-el
	text-align right
	margin-bottom 5px
	font-size 22px
	font-weight 400

.baner-small
	width 100%
	bgi('main-baner.jpg')
	width 100%
	height 190px
	background-size cover
	background-position bottom center
.baner-small-wraper 
	position relative
.baner-small-contact
	text-shadow 2.5px 4.3px 4.5px rgba(0, 0, 0, 0.64)
	color white
	font-size 30px
	font-weight 400
	line-height 50px
	position absolute
	top 10px
	right 10px
.baner-small-title
	text-shadow 1.5px 2.6px 12.7px rgba(0, 0, 0, 0.69)
	color white
	font-family Appetite
	font-size 104px
	font-style italic
.baner-small-sub-title
	text-shadow 4px 6.9px 12.7px rgba(0, 0, 0, 0.81)
	color white
	font-family Appetite
	font-size 42px
	font-style italic

.dellivery-wrap
	margin-top 75px
	p
		margin 10px 0
.title-mid
	color green
	font-size 30px
	font-weight 400
	line-height 38px
	
.dellivery-el
	margin-bottom 45px

.delivery-img
	img
		margin 0 auto
		margin-top 45px

.left-menu
	margin-top 120px
	width 230px
.left-menu-el 
	color #00a651
	font-size 18px
	font-weight 400
	line-height 24px
	display block
	margin-bottom 10px
	&:hover
		color yellow
.catalog-wraper
	.title
		font-size 40px

.pagination
	flex(mid)
	margin-top 60px
	a
		margin 0 5px
		font-size 22px



